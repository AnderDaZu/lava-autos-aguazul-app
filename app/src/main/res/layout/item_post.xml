<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="320dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="240dp">

            <ImageView
                android:id="@+id/ivPost"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginTop="0dp"
                android:contentDescription="@string/cd_image_post"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/common_8"
                android:paddingVertical="@dimen/common_8"
                android:background="@color/blue_700_transparent">

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Tipo VehÃ­culo"
                    android:textSize="@dimen/text_16"
                    android:textColor="@color/md_blue_grey_50"
                    android:fontFamily="@font/nunito_semi_bold"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/blue_700_transparent"
            android:paddingHorizontal="@dimen/common_16">

            <TextView
                android:id="@+id/tv_title"
                tools:text="Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="@integer/max_lines_1"
                android:fontFamily="@font/nunito_bold"
                android:paddingTop="@dimen/common_8"
                android:textColor="@color/white_clear"
                android:textSize="@dimen/text_20" />

            <TextView
                android:id="@+id/tv_extract"
                tools:text="Extracto del post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/common_8"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_semi_bold"
                android:lineSpacingMultiplier="0.7"
                android:maxLines="@integer/max_lines_1"
                android:textColor="@color/md_blue_grey_50"
                android:textSize="@dimen/text_16" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>